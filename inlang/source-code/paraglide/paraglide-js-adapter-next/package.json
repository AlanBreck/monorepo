{
	"name": "@inlang/paraglide-js-adapter-next",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "node ./build.mjs",
		"test": "vitest run --passWithNoTests"
	},
	"type": "module",
	"main": "dist/index.server.js",
	"module": "dist/index.server.js",
	"types": "dist/index.server.d.ts",
	"exports": {
		"./plugin": {
			"types": "./dist/plugin/index.d.ts",
			"require": "./dist/plugin/index.cjs"
		},
		"./pages": {
			"types": "./dist/pages/index.d.ts",
			"import": "./dist/pages/index.mjs",
			"require": "./dist/pages/index.cjs"
		},
		".": {
			"types": "./dist/index.server.d.ts",
			"react-server": "./dist/index.server.js",
			"default": "./dist/index.client.js"
		}
	},
	"keywords": [
		"inlang",
		"i18n",
		"localization",
		"translation",
		"internationalization",
		"next.js",
		"next",
		"react"
	],
	"files": [
		"dist"
	],
	"peerDependencies": {
		"next": "^13.0.0",
		"react": "^18"
	},
	"devDependencies": {
		"@inlang/sdk": "workspace:*",
		"@lix-js/client": "workspace:*",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^11.1.5",
		"@types/react": "^18",
		"rollup": "3.29.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-preserve-directives": "^1.1.0",
		"typescript": "^5.3.3"
	}
}