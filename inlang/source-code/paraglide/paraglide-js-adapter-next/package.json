{
    "name": "@inlang/paraglide-js-adapter-next",
    "version": "0.0.1",
    "private": true,
    "description": "A Next.js integration making it easy to work with Paraglide",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "keywords": [
        "inlang",
        "i18n",
        "localization",
        "translation",
        "internationalization",
        "next.js",
        "next",
        "react"
    ],
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./plugin": {
            "import": "./dist/plugin/index.mjs",
            "require": "./dist/plugin/index.js",
            "types": "./dist/plugin/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "next": "^13.0.0",
        "react": "^18"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/react": "^18",
        "rollup": "3.29.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-preserve-directives": "^1.1.0",
        "typescript": "^5.3.3"
    }
}