{
	"extends": "../tsconfig.base.json",
	"include": ["src/**/*"],
	"extensionsToTreatAsEsm": [".ts", ".tsx", ".mts", ".js", ".mjs"],
	"exclude": ["dist/", "coverage/"],
	"compilerOptions": {
		"allowImportingTsExtensions": false,
		"emitDeclarationOnly": false,
		"lib": ["ESNext", "DOM"],
		"types": ["node"],
		"outDir": "./dist",
		"rootDir": "./src"
	}
}
