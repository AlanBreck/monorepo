{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"namedInputs": {
		"default": [
			"{projectRoot}/**/*"
		],
		"doppler": [
			{
				"runtime": "doppler secrets download --no-file --format env | grep -v NX_CLOUD_ACCESS_TOKEN | grep -v ^DOPPLER"
			}
		]
	},
	"targetDefaults": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"default",
				"^default",
				"doppler"
			],
			"cache": true
		},
		"dev": {
			"dependsOn": [
				"^build"
			]
		},
		"test": {
			"dependsOn": [
				"^build"
			],
			"cache": true
		},
		"lint": {
			"dependsOn": [
				"format"
			],
			"cache": true
		},
		"format": {
			"cache": true
		}
	},
	"nxCloudAccessToken": "NmIwOWM4ZjUtZWNkMi00NTY1LThmZmEtNzMzZDEzOTZkYmVifHJlYWQ=",
	"affected": {
		"defaultBase": "origin/main"
	}
}